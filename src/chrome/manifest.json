{
  "manifest_version": 3,
  "minimum_chrome_version": "88.0",
  "name": "Ski Goggles",
  "version": "2.0.0",
  "description": "Inspect Web Analytic requests including Snowplow, Adobe Analytics, and more",
  "icons": {
    "16": "images/ski-goggles-16.png",
    "48": "images/ski-goggles-48.png",
    "128": "images/ski-goggles-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "devtools_page": "devtools.html",
  "homepage_url": "https://github.com/ski-goggles/ski-goggles",
  "options_page": "options.html",
  "permissions": ["storage", "webRequest"],
  "host_permissions": ["*://*/*"],
  "short_name": "Ski Goggles"
}
